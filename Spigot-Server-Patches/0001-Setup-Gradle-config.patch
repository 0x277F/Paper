From 20ed74784a4fee6e7dcd3cc08e54aea44699d6cf Mon Sep 17 00:00:00 2001
From: DemonWav <demonwav@gmail.com>
Date: Sun, 27 Nov 2016 08:01:04 -0600
Subject: [PATCH] Setup Gradle config


diff --git a/build.gradle b/build.gradle
new file mode 100644
index 0000000..6f86c79
--- /dev/null
+++ b/build.gradle
@@ -0,0 +1,33 @@
+dependencies {
+    compile project(":Paper-API")
+    compile "net.sf.jopt-simple:jopt-simple:4.9"
+    compile "jline:jline:2.12.1"
+    compile "org.xerial:sqlite-jdbc:3.15.1"
+    compile "mysql:mysql-connector-java:5.1.39"
+
+    testCompile "junit:junit:4.12"
+    testCompile "org.hamcrest:hamcrest-library:1.3"
+}
+
+jar {
+    manifest {
+        attributes "Main-Class": "org.bukkit.craftbukkit.Main"
+        attributes "Implementation-Title": "CraftBukkit"
+        attributes "Implementation-Version": paperVersion
+        attributes "Specification-Title": "Bukkit"
+        attributes "Specification-Version": "unknown"
+        attributes "Specification-Vendor": "Bukkit Team"
+    }
+}
+
+shadowJar {
+    baseName = "paper"
+    classifier = null
+    version = paperVersion
+
+    relocate "jline", "org.bukkit.craftbukkit.libs.jline"
+    relocate "org.ibex", "org.bukkit.craftbukkit.libs.org.ibex"
+    relocate "org.gjt", "org.bukkit.craftbukkit.libs.org.gjt"
+}
+
+build.dependsOn shadowJar
diff --git a/gradle.properties b/gradle.properties
new file mode 100644
index 0000000..5f7e198
--- /dev/null
+++ b/gradle.properties
@@ -0,0 +1 @@
+artifactId = paper
